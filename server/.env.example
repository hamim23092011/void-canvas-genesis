# Database
MONGODB_URI=mongodb://localhost:27017/whereis-it
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/whereis-it

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d

# Server
PORT=5000
NODE_ENV=development

# CORS
CLIENT_URL=http://localhost:3000
CLIENT_URL_PROD=https://yourdomain.com

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=1000000

# Email (if using nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password